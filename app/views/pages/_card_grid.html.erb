<div class="card-warpper padded">
  <div class="container">
    <div class="row">
    <% @places.each do |place| %>
      <div class="col-xs-12 col-sm-4">
          <%= link_to place_path(place) do %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('background.jpg');">
              <img class="card-user avatar" src="user.jpg">

              <!-- <div class="card-category">Popular</div> -->
               <div class="card-numbers">
                <h3><%= place.price %> â‚¬</h3>
                <h2><%= place.capacity %> <i class="fa fa-users" aria-hidden="true"></i></h2>
               </div>
              <div class="card-description">
                  <h2><%= place.name %></h2>
                  <p><%= place.address %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


