  <div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="btn btn-primary">
        Voir les photos
      </div>
    </div>
    <div class="col-sm-4">
      <span><%= @place.price %> € par soirée</span>
    </div>
  </div>

  </div>
</div>
<div class="wrapper" id="details_wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <div class="row">
          <div class="col-sm-8">
            <h3><%= @place.name %> </h3>
            <h4><%= @place.address %></h4>
            <p><%= @place.content %> </p>
             </div>
          <div class="col-sm-4">
          "Owner"
          </div>
        </div>
        <div class="row">
          <div class="span"> <i class="fa fa-users" aria-hidden="true"></i> <%= @place.capacity %> persons</div>
        </div>
      </div>
        <div class="col-sm-4">
        "Reservation"
        </div>
    </div>
  </div>
</div>
