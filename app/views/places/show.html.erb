<% if signed_in? %>
  <% if current_user.id == @place.user_id %>
    <%= link_to "edit place", edit_place_path(@place) %>
  <% end %>
<% end %>


<% @place.photos.each do |photo| %>
  <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
<% end %>


<%= simple_form_for [@place, @booking] do |f| %>

  <%= f.input :start_date, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d-%m-%Y') } %>
  <%= f.input :end_date, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d-%m-%Y') } %>
  <%= hidden_field_tag 'place_id', @place.id %>
  <%= hidden_field_tag 'user_id', current_user.id %>

  <%= f.button :submit %>

<% end %>

<% if current_user.id == @place.user_id %>
  <% unless @bookings.empty? %>
    <h2>List of bookings</h2>

    <% @bookings.each do |booking| %>
      <%= booking.id %> | <%= booking.user_id %> |<%= booking.start_date %> | <%= booking.start_date %> | <%= User.find(booking.user_id).email %><br>
    <% end %>
  <% end %>
<% end %>


